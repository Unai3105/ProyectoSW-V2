<% include partials/header.ejs %>

<h3>Ver Jugador(introducir Id)</h3>
<form action="/api/v1/players" method="post">
    <label for="id">Id</label>
    <input type="number" name="id" id="id" required>
    <input type="submit" value="Visualizar jugador" />
</form>
<br>
<br>
<h3>Eliminar Jugador(introducir Id)</h3>
<form action="/api/v1/delete" method="post">
    <label for="id">Id</label>
    <input type="number" name="delete_id" id="id" required>
    <input type="submit" value="Eliminar jugador" />
</form>
<br>
<br>
<h3>Añadir Jugador</h3>
<form action="/api/v1/add" method="post">
    <label for="id">Id</label>
    <input type="number" name="ID" id="ID">
    <br>
    <label for="name">Name</label>
    <input type="text" name="create_name" id="create_name">
    <br>
    <label for="birth_date">Birth date</label>
    <input type="text" name="birth_date" id="birth_date" required>
    <br>
    <label for="nationality">Nationality</label>
    <input type="text" name="nationality" id="nationality">
    <br>
    <label for="teamID">TeamID</label>
    <input type="number" name="teamID" id="teamID">
    <br>
    <label for="position">Position</label>
    <input type="text" name="position" id="position">
    <br>
    <label for="number">number</label>
    <input type="number" name="number" id="number">
    <br>
    <label for="number">LeagueID</label>
    <input type="number" name="LeagueID" id="LeagueID">
    <br>
    <input type="submit" value="Añadir jugador" />
</form>
<br>
<br>
